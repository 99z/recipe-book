<div class='container'>
  <div class='row'>

    <div class='col-xs-12'>
      <h2><%= @recipe.title %></h2>
      <h3><%= @recipe.author %></h3>
      <p><%= @recipe.description %></p>
    </div>

  </div>



  <div class='row'>

    <div class='col-xs-12'>
      <h4>Ingredients</h4>
      <ul>
        <% @recipe.ingredients.each do |ingredient| %>
          <li><%= ingredient.name %></li>
        <% end %>
      </ul>
    </div>


    <div class='col-xs-12'>
      <h4>Directions</h4>
      <% @recipe.instructions.each do |instruction| %>
        <p><%= instruction.body %></p>
      <% end %>
    </div>


  </div>
</div>